<h1>ブログ一覧</h1>
<%= notice %>

<table>
    <tr>
        <th>タイトル</th>
        <th>内容</th>
    </tr>
<% @blog_trains.each do |blog| %>
    <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to '詳細を確認する', blog_train_path(blog.id) %></td>
        <td><%= link_to '編集する', edit_blog_train_path(blog.id) %></td>
        <td><%= link_to 'ブログを削除する', blog_train_path(blog.id), method: :delete, data: {confirm: "本当に削除していいですか?"} %></td>
    </tr>
<% end %>
</table>

<%= link_to '新しくブログを投稿する', new_blog_train_path %>