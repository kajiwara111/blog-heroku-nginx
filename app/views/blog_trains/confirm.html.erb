<h3>以下の内容で、送信する。</h3>

<!--  createアクションにpostしたいのでurlは以下 -->
<%= form_with(model: @blog_train, url: blog_trains_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>

  <p>タイトル:<%= @blog_train.title %></p>
  <p>本文:<%= @blog_train.content %></p>
  <%= form.submit  "登録する" %>
<% end %>

<%= form_with(model: @blog_train, url: new_blog_train_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.submit "戻る", name: 'back' %>
<% end %>